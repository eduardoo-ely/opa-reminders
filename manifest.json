{
  "manifest_version": 3,
  "name": "Opa! Reminders",
  "version": "2.0.0",
  "description": "Gerenciador de lembretes e agendamentos com notificações",
  "permissions": [
    "alarms",
    "storage",
    "notifications",
    "tabs",
    "activeTab",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://suporte.ixcsoft.com.br/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}

